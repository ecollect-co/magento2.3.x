<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Sales:etc/sales.xsd">
    <section name="quote">
        <group name="totals">
            <item name="finance_cost" instance="ecollect\Core\Model\Quote\FinanceCost" sort_order="400"/>
            <item name="discount_coupon" instance="ecollect\Core\Model\Quote\DiscountCoupon" sort_order="350"/>
        </group>
    </section>
    <section name="order_invoice">
        <group name="totals">
            <item name="finance_cost" instance="ecollect\Core\Model\Invoice\FinanceCost" sort_order="50"/>
            <item name="discount_coupon" instance="ecollect\Core\Model\Invoice\DiscountCoupon" sort_order="50"/>
        </group>
    </section>
    <section name="order_creditmemo">
        <group name="totals">
            <item name="finance_cost" instance="ecollect\Core\Model\Creditmemo\FinanceCost" sort_order="50"/>
            <item name="discount_coupon" instance="ecollect\Core\Model\Creditmemo\DiscountCoupon" sort_order="50"/>
        </group>
    </section>
</config>
